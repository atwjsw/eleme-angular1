.rating-select
	.rating-type
		padding: 0 0 18px
		border-1px(rgba(7,17,27,0.1))
		font-size: 0
		.label				
			padding: 8px 12px
			display: inline-block
			font-size: 12px
			line-height: 16px
			color: rgb(77, 85, 93)
			margin-right: 8px
			border-radius: 2px
			.count
				font-size: 8px
				margin-left: 2px			
			&.all, &.positive
				background: rgba(0, 160, 220, 0.2)
				&.active
					background: rgb(0, 160, 220)
					color: #fff
			&.negative
				background: rgba(77, 85, 93, 0.2)
				&.active
					background: rgb(77, 85, 93)
					color: #fff
	.switch
		padding: 12px 0 0
		line-height: 24px
		height: 24px
		color: rgb(147, 153, 159)
		font-size: 0
		.icon-check_circle
			font-size: 24px					
			&.on
				color: rgb(0, 200, 80)
		.text
			vertical-align: top
			font-size: 12px
			margin-left: 4px